{
  "manifest_version": 3,
  "name": "EyeRemote",
  "version": "1.0.0",
  "description": "Automatically pauses/resumes media playback based on your gaze.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "camera"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.netflix.com/*",
    "*://*.disneyplus.com/*",
    "*://*.hulu.com/*",
    "*://*.primevideo.com/*",
    "*://*.max.com/*",
    "*://*.peacocktv.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.netflix.com/*",
        "*://*.disneyplus.com/*",
        "*://*.hulu.com/*",
        "*://*.primevideo.com/*",
        "*://*.max.com/*",
        "*://*.peacocktv.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lib/wasm/*",
        "lib/*.task",
        "lib/tasks-vision.js",
        "gazeDetector.js"
      ],
      "matches": [
        "*://*.youtube.com/*",
        "*://*.netflix.com/*",
        "*://*.disneyplus.com/*",
        "*://*.hulu.com/*",
        "*://*.primevideo.com/*",
        "*://*.max.com/*",
        "*://*.peacocktv.com/*"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; worker-src 'self'"
  }
}